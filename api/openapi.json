{
  "openapi": "3.0.3",
  "info": {
    "title": "Red social Node JS",
    "description": "Api para red social escrita en nodeJS",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Host de pruebas locales"
    }
  ],
  "tags": [
    {
      "name": "Usuarios",
      "description": "Metodos para las operaciones sobre los usuarios"
    }
  ],
  "paths": {
    "/api/user": {
      "get": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Lista los usuarios",
        "operationId": "listUser",
        "responses": {
          "default": {
            "description": "Obtiene una lista de los usuarios."
          }
        }
      },
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Registra un nuevo usuario",
        "operationId": "createUser",
        "requestBody": {
          "description": "Usuario creado",
          "content": {
            "application/x-www-form-raw": {
              "schema": {
                "$ref": "#/components/schemas/CreateUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sesion iniciada correctamente"
          }
        }
      },
      "put": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Actualiza la informacion de usuario",
        "operationId": "updateUser",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Usuario creado",
          "content": {
            "application/x-www-form-raw": {
              "schema": {
                "$ref": "#/components/schemas/EditUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Datos actualizados correctamente"
          },
          "500": {
            "description": "No se ha agregado el token"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Usuarios"
        ],
        "summary": "Permite al usuario iniciar sesion",
        "operationId": "loginUser",
        "requestBody": {
          "description": "Datos necesarios para inciar sesion",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Inicia sesion"
          },
          "400": {
            "description": "Informacion Invalida"
          },
          "default": {
            "description": "Inicio de sesion exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "CreateUser": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "format": "int64",
            "example": "Nameofuser"
          },
          "username": {
            "type": "string",
            "example": "Username"
          },
          "password": {
            "type": "string",
            "example": "12345"
          }
        }
      },
      "LoginUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "Username"
          },
          "password": {
            "type": "string",
            "example": "12345"
          }
        }
      },
      "Token": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": false
          },
          "status": {
            "type": "string",
            "example": "200"
          },
          "body": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6InpVc3RZUkg4VEoiLCJ1c2VybmFtZSI6IkF6dEZpcmVTcGVsbCIsInBhc3N3b3JkIjoiJDJiJDA3JGtGbjhULnhDUHJjY0FLVEFVOVB4My4yMUY2dXNWUTgvNmhEeExWQnB3RUFINWJoNndmMEguIiwiaWF0IjoxNjY2MjA5MzEyfQ.y2MuXhXrhcHIB-NtLygzm-CrCl6vQAqTiZ1cw9K65uQ"
          }
        }
      },
      "EditUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "OM6XNvJ5cA"
          },
          "name": {
            "type": "string",
            "example": "NameofUser"
          },
          "username": {
            "type": "string",
            "example": "Username"
          },
          "password": {
            "type": "string",
            "example": "12345"
          }
        }
      }
    }
  }
}